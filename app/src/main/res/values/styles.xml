<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_text_font" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bree_serif_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="toggleTextSelected">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/azulBotoes</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toggleTextOff">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinzaEscuro</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>

